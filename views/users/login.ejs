<% layout("./layouts/boilerplate"); %>
<h1>SignUp on Wonderlust</h1>

<div class="row mt-3">
           <div class="col-3 offset=3">
            <form action="/login" method="POST" class="needs-validation " novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input 
                    name="username"
                    type="text"
                    id="username"
                    class="form-control"
                    required>
                    
                </div>

                

                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input 
                    name="password"
                    type="password"
                    id="password"
                    class="form-control"
                    required>
                    
                </div>
                <button class="btn btn-seccess">LogIn</button>
            </form>
           </div>

</div>