<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class=" col-8 offset-2">
       <h2>Edit Your Listing</h2>
       
    <form
     method="POST" 
      action="/listings/<%=list._id %>?_method=PUT"
      novalidate
      class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label" >Title</label>
            <input name="listing[title]" value="<%= list.title  %>" type="text" class="form-control" required>
        </div>
       
        <div class="mb-3">
            <label for="description "class="form-label" >Description</label>
            <textarea name="listing[description]" class="form-control" required> <%= list.description  %>  </textarea>
        </div>
      
        <div class="mb-3">
            <label for="image" class="form-label" >Image</label>
            <input name="listing[image]" value="<%= list.image  %>" type="text" class="form-control" >
        </div>
       
       <div class="row">
        <div class="mb-3  col-md-4" >
            <label for="price" class="form-label" >Price</label>
            <input name="listing[price]" value="<%= list.price  %>" type="number" class="form-control" required>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label" >Country</label>
            <input name="listing[country]" value="<%= list.country  %>" class="form-control" required>
        </div>
       </div>
        
        
        
        <div class="mb-3">
            <label for="location" class="form-label" >Location</label>
            <input name="listing[location]" value="<%= list.location  %>" class="form-control" required>
        </div>
        
     
       
        
       
        <button class="btn  btn-dark" style="margin-bottom: 1rem;">submit</button>


    </form>
</div>
</div>
</body>
