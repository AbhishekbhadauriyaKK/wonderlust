<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h2>Create New Listing</h2>
    <form method="post" action="/listings"  class="needs-validation" novalidate>
        <div class="mb-3">
        <label for="title" class="form-label">Title</label> 
        <input name="listing[title]" placeholder="enter the title" type="text" class="form-control" required >
        <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label"> Description</label>
            <textarea name="listing[description]" placeholder="enter the description" class="form-control" required></textarea>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input name="listing[image]" placeholder="enter the emage link" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="1200"  class="form-control" required>
                <div class="invalid-feedback">
                    enter a valid price!
                  </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="enter the country" class="form-control" required>
                <div class="invalid-feedback">
                    enter a valid country name!
                  </div>
               </div>
        </div>
        
            
            <div>
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="enter the location" class="form-control">
            </div>
        
   
        <button class="btn btn-dark" style="margin-top: 2rem; margin-bottom: 2rem;">Add</button>


    </form>
</div>
</div>
</body>
</html>