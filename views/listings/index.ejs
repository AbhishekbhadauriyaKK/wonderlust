    <div class="row  ">
        <% for(list of alllistings){  %>
            <a href="/listings/<%= list._id  %>  " class="card-links">
            <div class=" card  col  cols-lg-3 cols-sm-1 cols-md-2" style="width: 20rem;">
                <img src="<%= list.image  %>" class="card-img-top"
                 alt="listing_image" 
                 style="height: 20rem;"/>
                <div class="card-img-overlay"> </div>
                <div class="card-body">
                  <p><%= list.title  %></p>
                  <p >  &#8377;<%= list.price  %> /night </p>
                        </div>
              </div>
            </a>
              <% } %>
    </div>

    


